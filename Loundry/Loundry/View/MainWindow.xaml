<Window x:Class="Loundry.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Loundry"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition>

                </RowDefinition>
            </Grid.RowDefinitions>

            <Border CornerRadius="10" Margin="0,16,0,-16">
                <Border.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="CadetBlue" Offset="1"/>
                        <GradientStop Color="Coral" 
                                      Offset="2"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>


            <Image Source="/assets/bangkinang.png" RenderTransformOrigin="0.512,0.488" Margin="0,83,0,261"/>
            <TextBox Name="tb_Email" Height="25" 
                         FontFamily="Halvetica"
                         FontWeight="Light" 
                         Text="E-mail" 
                         FontSize="20"
                         HorizontalAlignment="Left"
                         Foreground="White"
                         Background="Transparent"
                         BorderThickness="0"
                         Width="300"
                         HorizontalContentAlignment="Center"
                         Opacity="0.5"
                         Margin="53,338,0,237">

            </TextBox>
            <iconPacks:PackIconMaterial Kind="Account"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Center"
                         Foreground="White" Margin="310,343,76,243" Height="14" Width="14"/>
            <PasswordBox Name="tb_Password" FontFamily="Helvetica"
                            FontWeight="Light"
                            Password="Password"
                            FontSize="20"
                            HorizontalAlignment="Center"
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="0"
                            Width="300"
                            HorizontalContentAlignment="Center"
                            Opacity="0.5"
                            Height="25"
                            Margin="53,385,47,190"/>
            <iconPacks:PackIconMaterial Kind="TextboxPassword"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Foreground="White" Margin="310,390,74,194"/>
            <Border Width="250"
                       Height="2"
                       Background="White"
                       Opacity="0.5" Margin="76,361,74,237"/>
            <Border Width="250"
                Height="2"
                Background="White"
                Opacity="0.5" Margin="76,415,74,183"/>

            <Button  FontWeight="ExtraBold" BorderThickness="0"  Width="100" Height="40" Content="LOGIN" Margin="159,445,141,115" Click="Button_Click"/>





        </Grid>
    </Grid>
</Window>
